# RFID Checkin System Configuration
# Copy this file to .env and update the values

# Admin Account (created automatically on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Security Configuration
# Generate a secure secret key for session signing (optional but recommended)
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Environment setting (development/production)
# Set to "production" to enable secure cookies (requires HTTPS)
ENVIRONMENT=development

# Database Configuration
DATABASE_PATH=checkin.db